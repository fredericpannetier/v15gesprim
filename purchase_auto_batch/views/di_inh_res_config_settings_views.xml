<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="di_pab_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">di.pab.res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='full_traceability']" position="after">
                                        
                    <div class="col-12 col-lg-6 o_setting_box" id="di_auto_batch">                     
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="di_gen_lot" string="Automatic lot generation from purchases"/>
                                <field name="di_gen_lot"/>
                            </div>     
                            <br></br>
                            <div attrs="{'invisible': [('di_gen_lot','!=', 'seq')]}">                       
                                <label for="di_seq_lot" string="Sequence for lot generation"/>
                                <field name="di_seq_lot"/>
                            </div>                                                                                                                    
                        </div>
                    </div>                                                                                                                             
                </xpath>
            </field>
        </record>
</odoo>