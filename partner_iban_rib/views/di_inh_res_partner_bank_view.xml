<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>        
        <record id="di_view_partner_bank_iban_form" model="ir.ui.view">
            <field name="name">di.res.partner.bank.iban.form</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field eval="80" name="priority"/>
            <field name="arch" type="xml">                
                <xpath
                    expr="//field[@name='acc_number']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>  
                <xpath
                    expr="//field[@name='acc_type']" position="attributes">
                    <attribute name="invisible">1</attribute>                    
                </xpath>  
                <xpath
                    expr="//field[@name='acc_number']" position="before">
                    <field name="di_ibanctry"/>
                    <field name="di_ibankey"/>
                    <field name="di_ibanbk"/>
                    <field name="di_ibanbksortcode"/>
                    <field name="di_ibanacc"/>
                    <field name="di_ibanribkey"/>                   
                </xpath>                            
            </field>
        </record>            
    </data>
</odoo>
