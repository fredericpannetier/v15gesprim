<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="ges_res_config_settings_view_form" model="ir.ui.view">
		<field name="name">ges.res.config.settings.view.form.inherit</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="Sale_Grid" string="Sale Grid"
					data-key="sale_grid" groups="base.group_user">
					<h2>Sale Grid Settings</h2>
					<div class="row mt16 o_settings_container" name="salegrid_settings">
					   <div class="col-12 col-lg-6 o_setting_box" id="sale_grid_options">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <label for="di_sale_grid_mode" />
                                    <field name="di_sale_grid_mode" />
                                </div>
                            </div>
                        </div>
                        
					   <div class="col-12 col-lg-6 o_setting_box" id="sale_grid_options">
    						<div class="o_setting_left_pane">
    						</div>
    						<div class="o_setting_right_pane">
    							<div>
    								<label for="di_sale_horizon" attrs="{'invisible': [('di_sale_grid_mode','!=', 'Horizon')]}"/>
    								<field name="di_sale_horizon" attrs="{'invisible': [('di_sale_grid_mode','!=', 'Horizon')]}"/>
    							</div>
    						</div>
    					</div>
    					<div class="col-12 col-lg-6 o_setting_box" id="sale_grid_options">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <label for="di_sale_order_num" attrs="{'invisible': [('di_sale_grid_mode','!=', 'Order Number')]}"/>
                                    <field name="di_sale_order_num" attrs="{'invisible': [('di_sale_grid_mode','!=', 'Order Number')]}"/>
                                </div>
                            </div>
                        </div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
