<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="di_grid_purchase_wiz" model="ir.ui.view">
        <field name="name">di.purchase.grid.form</field>
        <field name="model">di.purchase.grid.wiz</field>
        <field name="arch" type="xml">
            <form string="purchase Grid">
                <group>                
                    <group>                                              
                        <field name="po_id"/>                               
                    </group>                                      
                </group>
                <separator />
                <label for="product_ids"/>
                <field name="product_ids">
                    <tree order="display_name">
                        <field name="display_name" />                                               
                    </tree>
                </field>
                <footer>
                    <button string="Validate" type="object" name="di_grid_validate"
                        default_focus="1" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
