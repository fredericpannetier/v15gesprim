<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="di_purchasegrid_view_purchase_order_form" model="ir.ui.view">
		<field name="name">di.purchase.grid.purchase.order.form</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form" />
		<field eval="80" name="priority" />
		<field name="arch" type="xml">
			<xpath expr="//header/field[@name='state']" position="before">
				<button class="oe_edit_only" name="di_purchasegrid_action"
					type="object" string="Purchase Grid"
					help="Allow to import previous purchase into new purchase order" />
			</xpath>
		</field>                                    
    </record>   
</odoo>