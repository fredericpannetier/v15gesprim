<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="di_view_logbook_tree" model="ir.ui.view" >
            <field name="name">di.logbook.tree</field>
            <field name="priority">1</field>
            <field name="model">di.logbook</field>        
            <field name="arch" type="xml">
                <tree string="Logbook" default_order = "name"  import="false" create="false" edit="false">
                    <field name="name"/>
                    <field name="message"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
    </record>
    
    <record id="di_livrebord_form" model="ir.ui.view">
        <field name="name">di.logbook.form</field>
        <field name="model">di.logbook</field>
        <field name="arch" type="xml">
            <form string="Livre de bord">
                <header>
                </header>
                <sheet> 
                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="message" readonly="1" />
                            <field name="create_uid" readonly="1" />
                            <field name="create_date" readonly="1" />
                        </group>
                    </group>
                </sheet>         
            </form>
        </field>
    </record>
    
    <record id="di_action_logbook" model="ir.actions.act_window">
        <field name="name">Logbook</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">di.logbook</field>
        <field name="search_view_id" ref="di_view_logbook_tree"/>              
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Aide
            </p>
            <p>
                Logbook
            </p>
        </field>
    </record>
</odoo>